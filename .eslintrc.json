{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-unused-vars": "warn",
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "no-implied-eval": "error",
        // Prohibit use of == and != in favor of === and !==.
        "eqeqeq": "warn",
        // Suppress warnings about == null comparisons.
        "no-eq-null": "error",
        // Prohibit use of a variable before it is defined.
        "no-undef": "error"
    }
    // "overrides": [
    //     {
    //         "files": [
    //             "test/*"
    //         ], // Or *.test.js
    //         "rules": {
    //             "no-unused-vars": "off"
    //         }
    //     }
    // ]
}